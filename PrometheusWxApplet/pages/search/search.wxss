.search_title{
   width: 100rpx;
   height: 80rpx;
   position: absolute;
   top: 40rpx;
}
.search_title .search_obj{
   width: 75rpx;
   height: 80rpx;
   line-height: 80rpx;
   text-align: center;
   position: absolute;
   font-size: 24rpx;
   font-weight: bold;
   color: #2f54eb;
}
.search_title .search_obj_icon{
   position: absolute;
   margin-left: 60rpx;
   margin-top: 12rpx;
}
.search_view {
   width: 600rpx;
   height: 80rpx;
   margin-top: 40rpx;
   margin-left: 100rpx;
   border-radius: 40rpx;
   background: #fff;
}

.search_view .search_icon {
   position: absolute;
   margin-top: 20rpx;
   margin-left: 28rpx;
}

.search_view  .search_input {
   width: 420rpx;
   height: 80rpx;
   border: none;
   font-size: 32rpx;
   color: #000;
   position: absolute;
   margin-left: 80rpx;
}

.search_view .phclass {
   color: #9b9b9b;
   font-size: 32rpx;
}

.search_view .scan_icon {
   position: absolute;
   margin-top: 10rpx;
   margin-left: 520rpx;
}

.opt {
   width: 670rpx;
   height: 60rpx;
   margin-top: 40rpx;
   margin-left: 40rpx;
}

.opt .title {
   margin-left: 20rpx;
   font-size: 28rpx;
   color: #4a4a4a;
   font-weight: bold;
}

.opt .clear {
   margin-left: 460rpx;
}

.hot_search {
   width: 700rpx;
   padding: 0 80rpx;
   margin: 0 auto;
}

.hot_search .search_button {
   display: inline-block;
   padding: 10rpx 30rpx;
   border-radius: 30rpx;
   font-size: 26rpx;
   color: #9b9b9b;
   background: #fff;
   margin-top: 30rpx;
   margin-right: 60rpx;
}

.search_result {
   width: 750rpx;
   margin-top: 50rpx;
}

.search_result .text {
   margin-left: 60rpx;
   font-size: 24rpx;
   color: #4a4a4a;
}

.search_result .result {
   width: 740rpx;
   height: 100rpx; 
   margin: 10rpx auto;  
   background: #fff;
}
.search_result .result .title{
   width: 620rpx;
   height: 100rpx;
   line-height: 100rpx;
   padding-left: 48rpx;
   padding-right: 72rpx;
   margin-top: 10rpx;
   font-size: 32rpx;
   color: #000;
   display: -webkit-box;
   word-break: break-all;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
   text-overflow: ellipsis;
}
.noResult{
   width: 116rpx;
   height: 106rpx;
   margin-top: 300rpx;
   margin-left: 317rpx;
}
.noResultText{
   width: 750rpx;
   font-size: 32rpx;
   margin-top: 30rpx;
   color: #9b9b9b;
   text-align: center;
}